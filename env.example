# Smart Manufacturing Data Hub (SMDH) - Environment Variables Example
# Copy this file to .env and update with your actual values

# AWS Configuration
AWS_REGION=eu-west-2
AWS_ACCOUNT_ID=your-account-id
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key

# Snowflake Configuration
SNOWFLAKE_ACCOUNT=your-account.snowflakecomputing.com
SNOWFLAKE_USER=your-username
SNOWFLAKE_PASSWORD=your-password
SNOWFLAKE_WAREHOUSE=SMDH_WH
SNOWFLAKE_DATABASE=SMDH_DB
SNOWFLAKE_SCHEMA=PUBLIC

# Application Configuration
NODE_ENV=development
PORT=3000
API_BASE_URL=http://localhost:3001

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/smdh
REDIS_URL=redis://localhost:6379

# IoT Configuration
MQTT_BROKER_URL=mqtts://your-iot-endpoint.amazonaws.com:8883
MQTT_CLIENT_ID=smdh-web-portal

# Authentication
JWT_SECRET=your-jwt-secret-key
COGNITO_USER_POOL_ID=eu-west-2_xxxxxxxxx
COGNITO_CLIENT_ID=your-cognito-client-id

# Monitoring
LOG_LEVEL=info
SENTRY_DSN=your-sentry-dsn

# External Services
QUICKSIGHT_EMBEDDING_URL=https://your-account.quicksight.eu-west-2.amazonaws.com
GRAFANA_URL=http://localhost:3000
POWERBI_CLIENT_ID=your-powerbi-client-id

# Development
DEBUG=true
HOT_RELOAD=true
